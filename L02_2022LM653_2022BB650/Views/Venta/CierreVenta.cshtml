@model L02_2022LM653_2022BB650.Models.libros

@{
    ViewData["Title"] = "Venta de Libros";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="text-center bg-dark text-white py-3">
    <img src="/img/logo1.png" alt="Logo" width="100">
    <h2>Venta de Libros</h2>
    <p>Seleccione los libros y posterior ingrese sus datos</p>
</div>

<div class="container mt-4">
    <div class="row">
        <!-- Formulario de datos del cliente -->
        <div class="col-md-8">
            <h4>Proceso de venta</h4>
            <h5>Datos del Cliente</h5>

            <form asp-action="CerrarVenta" asp-controller="Ventas" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="Nombre" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="apellido">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="Apellido" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="mb-3">
                    <label for="direccion">Dirección</label>
                    <input type="text" class="form-control" id="direccion" name="Direccion" required>
                </div>

                <button type="submit" class="btn btn-success">Cerrar venta</button>
            </form>
        </div>

        <!-- Resumen del carrito -->
        <div class="col-md-4">
